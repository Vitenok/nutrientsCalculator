<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0">
    <persistence-unit name="food_composition">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        <class>com.iti.foodCalculator.entity.Product</class>
        <class>com.iti.foodCalculator.entity.Category</class>
        <class>com.iti.foodCalculator.entity.User</class>
        <properties>
            <property name="hibernate.connection.url" value="jdbc:mysql://127.0.0.1:3306/food_composition"/>
            <property name="hibernate.connection.driver_class" value="com.mysql.jdbc.Driver"/>
            <property name="hibernate.connection.username" value="root"/>
            <property name="hibernate.connection.password" value="root"/>

            <property name="hibernate.show_sql" value="false"/>
            <property name="hibernate.format_sql" value="false"/>
            <property name="hibernate.use_sql_comments" value="false"/>
            <!--
            <property name="hibernate.hbm2ddl.auto" value="create"/>
            -->
        </properties>
    </persistence-unit>
</persistence>